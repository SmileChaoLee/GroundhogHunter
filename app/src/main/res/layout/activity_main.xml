<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe8e56a"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/scoreLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2">
    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gameAreaGridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#118711"
        app:rowCount="5"
        app:columnCount="5"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toBottomOf="@id/scoreLinearLayout">

    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:id="@+id/buttonLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/gameAreaGridLayout">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/showAdsLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2b1e1e"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/buttonLinearLayout">
    </LinearLayout>

</android.support.constraint.ConstraintLayout>