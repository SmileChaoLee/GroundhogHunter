<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow2">

    <LinearLayout
        android:id="@+id/joinGameTitleLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@drawable/layout_horizontal_divider"
        android:showDividers="end"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/joinGameTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerNameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toBottomOf="@id/joinGameTitleLayout"
        android:weightSum="100">
        <TextView
            android:id="@+id/playerNameStringTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_marginRight="0dp"
            android:text="@string/playerNameString"
            android:layout_weight="40">
        </TextView>
        <TextView
            android:id="@+id/playerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:background="@drawable/edittext_bar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_weight="60">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerListViewLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/playerNameLayout"
        app:layout_constraintBottom_toTopOf="@id/refreshCancelJoinGameButtonLayout" >
        <ListView
            android:id="@+id/playerListView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/listview_border"
            android:scrollbars="vertical|horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/refreshCancelJoinGameButtonLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="2">
        <com.smile.groundhoghunter.Models.SmileImageButton
            android:id="@+id/refreshJoinGameButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_weight="1" >
        </com.smile.groundhoghunter.Models.SmileImageButton>
        <com.smile.groundhoghunter.Models.SmileImageButton
            android:id="@+id/cancelJoinGameButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_weight="1" >
        </com.smile.groundhoghunter.Models.SmileImageButton>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>