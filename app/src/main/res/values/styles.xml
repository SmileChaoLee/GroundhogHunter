<resources>

    <!-- Base application theme. -->
    <!-- style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- no Action Bar -->
        <item name="windowNoTitle">true</item>

        <!-- no Status Bar -->
        <item name="android:windowFullscreen">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:itemBackground">#ffa500</item>
        <item name="android:itemPadding">0dp</item>
    </style>

    <style name="ThemeTextSize30" parent="AppTheme">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="ThemeTextSize50" parent="AppTheme">
        <item name="android:textSize">50dp</item>
    </style>

    <style name="ThemeTextSize30Transparent" parent="ThemeTextSize30">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ThemeTextSize50Transparent" parent="ThemeTextSize30Transparent">
        <item name="android:textSize">50dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
