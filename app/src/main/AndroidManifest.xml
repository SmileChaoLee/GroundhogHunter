<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smile.groundhoghunter">

    <application
        android:name=".GroundhogHunterApp"
        android:allowBackup="true"
        android:icon="@drawable/groundhog_icon"
        android:label="@string/app_name"
        android:theme="@style/ThemeTextSize30">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Top10ScoreActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".SettingActivity"
            android:configChanges="orientation"
            android:label="@string/settingStr"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeTextSize30Transparent">
        </activity>

        <activity android:name=".MultiPlayerActivity"
            android:configChanges="orientation"
            android:label="@string/multipleStr"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeTextSize30Transparent">
        </activity>

    </application>

</manifest>